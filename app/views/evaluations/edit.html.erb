<!-- Validation failure messages -->
<% if @evaluation.errors.any? %>
  <% @evaluation.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Evaluation #<%= @evaluation.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_evaluation/<%= @evaluation.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for reviewer_id -->
      <div class="form-group">
        <label for="reviewer_id" class="control-label">
          Reviewer
        </label>

        <input type="text" id="reviewer_id" name="reviewer_id" placeholder="Reviewer" class="form-control" value="<%= @evaluation.reviewer_id %>">
      </div>

      <!-- Label and input for reviewee_id -->
      <div class="form-group">
        <label for="reviewee_id" class="control-label">
          Reviewee
        </label>

        <input type="text" id="reviewee_id" name="reviewee_id" placeholder="Reviewee" class="form-control" value="<%= @evaluation.reviewee_id %>">
      </div>

      <button class="btn btn-warning">
        Update Evaluation
      </button>
      or
      <a href="/evaluations/<%= @evaluation.id %>">Cancel</a>
    </form>
  </div>
</div>
